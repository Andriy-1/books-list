<h1>Список книг</h1>
<table>
  <tr>
    <th>Назва</th>
    <th>Автор</th>
    <th>Опис</th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= link_to 'Деталі', book %></td>
      <td><%= link_to 'Оновити', edit_book_path(book) %></td>
      <td>
  <%= form_with model: book, method: :delete, remote: true, class: 'delete' do |form| %>
	<%= form.submit 'Видалити' %>
  <% end %>
  </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Додати нову книгу', new_book_path %>
